<%= bootstrap_form_for(@user) do |f| %>
  
  <div class="form-group">
    <div class="row">
      <div class="col-sm-4">
        <%= f.text_field :nom %>
        <%= f.text_field :prénom %>
        <%= f.text_field :email %>
        <%= f.text_field :mobile %>
        <%= f.password_field :password %>
        <%= f.password_field :password_confirmation %>
        <%= f.check_box :reserver, label:"Peut réserver une salle ?" %>
        <%= f.check_box :admin, label:"Peut administrer l'application ?" %>
        <br>
        
        <%= f.submit class: "btn btn-primary" %>
      </div>
    </div>
  </div>

<% end %>
