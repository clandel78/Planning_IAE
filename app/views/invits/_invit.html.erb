<tr>
  <td>
      <span data-action="click->action#click">
          <%= check_box_tag "[invits_id][#{invit.id}]", 'yes', false, data: {"target":"action.source"} %>
      </span>
  </td>
  <td>
    <%= link_to invit do %>
      <b><%= l(invit.cour.debut, format: :heures_min) %></b> 
      <br>
      <%= l(invit.cour.fin, format: :heures_min) %>
    <% end %>
  </td>
  <td>
    <span style="background-color:<%= invit.cour.formation.color %>;padding-left: 7px;margin-right: 5px;"></span>
      <%= invit.cour.formation.abrg %>
    </span>
  </td>
  <td><%= Unite.find(invit.ue).num_nom unless invit.ue.blank? %></td>
  <td><%= invit.intervenant.nom_prenom %></td>
  <td>
    <span class="badge <%= invit.style %>">
      <%= invit.workflow_state.humanize %>
    </span>
  </td>
  <td><span title="<%= invit.reponse %>"><%= truncate(invit.reponse, length: 20) %></span></td>
  <td><%= time_ago_in_words invit.updated_at %></td>
  <td><%= link_to 'Voir', invit %></td>
</tr>