<div class="d-flex justify-content-center align-items-center border border-dark rounded shadow mt-5 pt-4 pb-3" style="max-width: 300px">
  <%= bootstrap_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="border-bottom mb-4">
      <h3><%= fa_icon 'sign-in-alt' %> <%= t('.sign_in') %></h3>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col">
          <%= f.email_field :email, autofocus: true  %>
          <%= f.password_field :password, autocomplete: "off" %>
          <% if devise_mapping.rememberable? %>
              <%= f.check_box :remember_me %>
          <% end %>
          <br>
          <div class="actions">
            <%= f.submit t('.sign_in'), class: "btn btn-primary mb-3" %>
            <br>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>

    </div>
  <% end %>
</div>