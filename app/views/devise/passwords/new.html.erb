<div class="d-flex justify-content-center align-items-center border border-dark rounded shadow mt-5 pt-4 pb-3">
  <%= bootstrap_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
    <div class="border-bottom mb-4">
      <h3><%= fa_icon 'sign-in-alt' %> <%= t('.forgot_your_password') %></h3>
    </div>
    <div class="form-group">
      <div class="row">
        <div class="col">
          <%= f.email_field :email, autofocus: true  %>
        </div>
      </div>
    </div>

    <div class="actions">
      <%= f.submit t('.send_me_reset_password_instructions'), class: "btn btn-primary" %>
    </div>
  <% end %>
</div>