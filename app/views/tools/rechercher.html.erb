<%= form_tag tools_rechercher_path, method: :get do %>
    <div class="field p-3">
      <div class="control has-icons-left has-icons-right">
        <%= text_field_tag :search, 
                              params[:search], 
                              class: "input is-rounded is-info", 
                              placeholder: "Entrez ici un terme (ex: innover, CFGA, gestion, vie associative...)",
                              autofocus: true %>
        <span class="icon is-small is-left">
          <i class="fas fa-search"></i>
        </span>
      </div>
    </div>
<% end %>

<% if defined?(@results) %>
    <% if @results.any? %>
      <%= render partial: @results, as: :result %>
    <% else %>
      <p class="title is-4 has-text-centered p-6">
        Aucun résultat trouvé...
      </p>
    <% end %>
<% end %>