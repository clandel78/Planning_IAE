                <span class="text-center" style="color:<%= Formation.unscoped.find(Cour.find(result.searchable_id).formation_id).color %>;">
                    <%= fa_icon 'calendar-day' %>
                </span>
                <span>
                    Cours
                </span>
            </td>
            <td>
                <%= l(Cour.find(result.searchable_id).debut.to_date, format: :default) %>
